<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="scope_work_set_view_form" model="ir.ui.view">
            <field name="name">scope.work.set.view.form</field>
            <field name="model">scope.work.set</field>
            <field name="arch" type="xml">
                <form string="Scope of Work Set">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="e.g. Web Development"/></h1>
                        </div>
                        <notebook>
                            <page string="Work Lines">
                                <field name="work_line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="scope_work_set_view_tree" model="ir.ui.view">
            <field name="name">scope.work.set.view.tree</field>
            <field name="model">scope.work.set</field>
            <field name="arch" type="xml">
                <tree string="Scope of Work Sets">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="scope_work_set_action" model="ir.actions.act_window">
            <field name="name">Scope of Work</field>
            <field name="res_model">scope.work.set</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>