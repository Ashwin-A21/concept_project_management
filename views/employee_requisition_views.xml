<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_requisition_form_inherit_project_csl" model="ir.ui.view">
        <field name="name">employee.purchase.requisition.form.inherit.project.csl</field>
        <field name="model">employee.purchase.requisition</field>
        <field name="inherit_id" ref="employee_purchase_requisition.view_employee_purchase_requisition_form"/>
        <field name="arch" type="xml">
            
            <!-- Smart Button -->
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button type="object"
                    name="action_view_project"
                    class="oe_stat_button"
                    icon="fa-folder"
                    invisible="project_csl_id == False">
                    <span class="o_stat_text">Project</span>
                </button>
            </xpath>

            <!-- Add fields in the form - adjust xpath based on actual form structure -->
            <!-- This adds after employee_id, but you may need to adjust based on the actual form -->
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="project_csl_id" 
                       options="{'no_create': True, 'no_open': True}"/>
                <field name="project_reference" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>