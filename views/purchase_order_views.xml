<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_form_inherit_project_csl" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.project.csl</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button type="object"
                    name="action_view_project"
                    class="oe_stat_button"
                    icon="fa-folder"
                    invisible="[('project_csl_id', '=', False)]">
                    <span class="o_stat_text">Project</span>
                </button>
            </xpath>

            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="project_csl_id" context="{'default_customer_id': partner_id}"/>
                <field name="project_reference" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>