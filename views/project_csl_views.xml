<odoo>
    <data>

        <record id="project_csl_view_form" model="ir.ui.view">
            <field name="name">project.csl.view.form</field>
            <field name="model">project.csl</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <div>
                        <field name="project_reference" readonly="1" class="oe_highlight"/>
                    </div>
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" invisible="[('state', '!=', 'draft')]"/>
                        <button name="action_done" type="object" string="Mark as Done" class="oe_highlight" invisible="[('state', '!=', 'confirm')]"/>
                        <button name="action_draft" type="object" string="Set to Draft" invisible="[('state', '=', 'draft')]"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                    </header>
                    
                    <sheet readonly="[('state', '=', 'done')]">
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_quotations"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text-o">
                                <field name="quotation_count" widget="statinfo" string="Quotations"/>
                            </button>
                            <button name="action_view_invoices"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o">
                                <field name="invoice_count" widget="statinfo" string="Invoices"/>
                            </button>
                            <button name="action_view_purchase_orders"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-shopping-cart">
                                <field name="purchase_order_count" widget="statinfo" string="Purchase Orders"/>
                            </button>
                            <button name="action_view_vendor_bills"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-o">
                                <field name="project_bill_count" widget="statinfo" string="Vendor Bills"/>
                            </button>
                            <button name="action_view_employee_requisitions"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-user-plus">
                                <field name="employee_requisition_count" widget="statinfo" string="Pur. Requests"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Project Title..."/></h1>
                        </div>

                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="customer_id" required="1"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Project Details">
                                <group>
                                    <field name="scope_work_set_id"/>
                                </group>
                                <field name="project_scope_line_ids" mode="tree">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Quotation">
                                <field name="project_quotation_line_ids"
                                       context="{'default_project_id': active_id, 'search_default_partner_id': customer_id}">
                                    <tree editable="bottom">
                                        <field name="quotation_id"
                                               domain="[('partner_id', '=', parent.customer_id), ('state', 'in', ['draft', 'sent', 'sale'])]"
                                               context="{'form_view_ref': 'sale.view_order_form'}"/>
                                        <field name="amount_untaxed" sum="Total Untaxed"/>
                                        <field name="amount_tax" sum="Total Tax"/>
                                        <field name="amount_total" sum="Total"/>
                                        <field name="currency_id" column_invisible="1"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Invoice">
                                <field name="invoice_ids" readonly="1"
                                       domain="[('move_type', '=', 'out_invoice')]"
                                       context="{'form_view_ref': 'account.view_move_form'}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="invoice_date"/>
                                        <field name="amount_total"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Purchase Order">
                                <field name="project_purchase_line_ids"
                                       context="{'default_project_id': active_id}">
                                    <tree editable="bottom">
                                        <field name="purchase_order_id"
                                               domain="[('state', 'in', ['draft', 'sent', 'to approve', 'purchase'])]"
                                               context="{'form_view_ref': 'purchase.purchase_order_form'}"/>
                                        <field name="partner_id" readonly="1"/>
                                        <field name="amount_untaxed" sum="Total Untaxed"/>
                                        <field name="amount_tax" sum="Total Tax"/>
                                        <field name="amount_total" sum="Total"/>
                                        <field name="currency_id" column_invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Purchase">
                                <field name="project_bill_ids" readonly="1"
                                       domain="[('move_type', '=', 'in_invoice')]"
                                       context="{'form_view_ref': 'account.view_move_form'}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="invoice_date"/>
                                        <field name="amount_total"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Employee">
                                <group>
                                    <field name="employee_ids" widget="many2many_tags" placeholder="Add employees..." string="Select Employee"/>
                                </group>
                            </page>
                            
                            <page string="Estimated Cost"><field name="estimated_cost_details" placeholder="Enter estimated cost details..."/></page>
                            <page string="Budget"><field name="budget_details" placeholder="Enter budget details..."/></page>
                            <page string="Task and Duties"><field name="task_duties_details" placeholder="Enter task and duties..."/></page>
                            
                            <page string="Purchase Request">
                                <field name="employee_requisition_line_ids">
                                    <tree editable="bottom">
                                        <field name="requisition_id"/>
                                        <field name="name"/>
                                        <field name="employee_id"/>
                                        <field name="dept_id"/>
                                        <field name="requisition_date"/>
                                        <field name="state" widget="badge"
                                               decoration-success="state in ('approved','received')"
                                               decoration-warning="state in ('waiting_department_approval','waiting_head_approval')"
                                               decoration-info="state =='purchase_order_created'"
                                               decoration-danger="state =='cancelled'"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Cost"><field name="cost_details" placeholder="Enter cost details..."/></page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="project_csl_view_tree" model="ir.ui.view">
            <field name="name">project.csl.view.tree</field>
            <field name="model">project.csl</field>
            <field name="arch" type="xml">
                <tree string="Projects">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state" optional="show" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'confirm'"/>
                    <field name="company_id" optional="hidden"/>
                    <field name="project_reference" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="project_csl_action" model="ir.actions.act_window">
            <field name="name">Custom Projects</field>
            <field name="res_model">project.csl</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>